@model Paragwan.Models.ParaglidingDetail
<link rel="stylesheet" href="~/css/Paragliding.css" />

<div class="form-container fade-in">
    <h2>Add Paragliding Adventure</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name:</label>
            <input type="text" name="Name" class="form-control animated-input" required />
        </div>
        <div class="form-group">
            <label>Description:</label>
            <textarea name="Description" class="form-control animated-input" required></textarea>
        </div>
        <div class="form-group">
            <label>Location:</label>
            <input type="text" name="Location" class="form-control animated-input" required />
        </div>
        <div class="form-group">
            <label>Price:</label>
            <input type="number" name="Price" class="form-control animated-input" required />
        </div>
        <div class="form-group">
            <label>Duration:</label>
            <input type="text" name="Duration" class="form-control animated-input" required />
        </div>
        <div class="form-group">
            <label>Image:</label>
            <input type="file" name="ImageUrl" class="form-control animated-input" required />
        </div>
        <button type="submit" class="btn btn-primary animated-button">Submit</button>
    </form>
</div>
