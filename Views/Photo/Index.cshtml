@model IEnumerable<Paragwan.Models.Photo>
<link rel="stylesheet" href="~/css/Photo.css" />

<h2 class="fade-in">Photo Gallery</h2>
<div class="photo-gallery">
    @foreach (var photo in Model)
    {
        <div class="photo-card animate__animated animate__zoomIn">
            <img src="@photo.ImageUrl" alt="@photo.Title" />
            <h3>@photo.Title</h3>
            <p>@photo.Description</p>
            <a href="/Photo/Edit/@photo.PhotoId" class="btn btn-primary animated-button">Edit</a>
            <form method="post" action="/Photo/Delete" style="display:inline;">
                <input type="hidden" name="id" value="@photo.PhotoId" />
                <button type="submit" class="btn btn-danger animated-button">Delete</button>
            </form>
        </div>
    }
</div>
<a href="/Photo/Upload" class="btn btn-primary animated-button">Upload New Photo</a>
