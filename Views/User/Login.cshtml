@model Paragwan.Models.User
<link rel="stylesheet" href="~/css/Profile.css" />

<div class="profile-container fade-in">
    <h2>My Profile</h2>
    <div class="profile-details">
        <img src="@Model.ProfilePicture" alt="Profile Picture" class="profile-pic" />
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p><strong>National ID:</strong> @Model.NationalID</p>
    </div>
    <div class="profile-actions">
        <a href="/Profile/BookAdventure" class="btn btn-primary animated-button">Book Adventure</a>
    </div>
</div>
