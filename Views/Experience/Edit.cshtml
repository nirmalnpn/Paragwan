@model Paragwan.Models.ClientExperience
<link rel="stylesheet" href="~/css/Experience.css" />

<div class="form-container fade-in">
    <h2>Edit Your Experience</h2>
    <form method="post">
        <input type="hidden" name="ExperienceId" value="@Model.ExperienceId" />
        <div class="form-group">
            <label>Your Experience:</label>
            <textarea name="Description" class="form-control animated-input" required>@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Rating (1-5):</label>
            <input type="number" name="Rating" class="form-control animated-input" value="@Model.Rating" min="1" max="5" required />
        </div>
        <button type="submit" class="btn btn-primary animated-button">Update</button>
    </form>
</div>