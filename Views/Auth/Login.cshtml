@{
    ViewData["Title"] = "Login";
}

<div class="login-container fade-in">
    <h2>Login</h2>
    <form method="post" class="form-container">
        <div class="mb-3">
            <label>Email:</label>
            <input type="email" name="email" autocomplete="email" class="form-control animated-input" required />
        </div>
        <div class="mb-3">
            <label>Password:</label>
            <input type="password" name="password" autocomplete="current-password" class="form-control animated-input" required />
        </div>
        <button type="submit" class="btn btn-primary animated-button">Login</button>
    </form>
</div>
